{
  "schemaVersion": 2,
  "dockerfilePath": "./Dockerfile",
  "services": [
    {
      "serviceName": "web",
      "containerHttpPort": 80,
      "volumes": [
        {
          "hostPath": "/captain/data/my-laravel-app/storage",
          "containerPath": "/var/www/html/storage"
        },
        {
          "hostPath": "/captain/data/my-laravel-app/bootstrap_cache",
          "containerPath": "/var/www/html/bootstrap/cache"
        }
      ]
    },
    {
      "serviceName": "queue-worker",
      "command": "php artisan queue:work --tries=3 --sleep=3 --queue=default,high",
      "volumes": [
        {
          "hostPath": "/captain/data/my-laravel-app/storage",
          "containerPath": "/var/www/html/storage"
        },
        {
          "hostPath": "/captain/data/my-laravel-app/bootstrap_cache",
          "containerPath": "/var/www/html/bootstrap/cache"
        }
      ]
    },
    {
      "serviceName": "scheduler",
      "command": "php artisan schedule:run",
      "restartPolicy": "always",
      "volumes": [
        {
          "hostPath": "/captain/data/my-laravel-app/storage",
          "containerPath": "/var/www/html/storage"
        },
        {
          "hostPath": "/captain/data/my-laravel-app/bootstrap_cache",
          "containerPath": "/var/www/html/bootstrap/cache"
        }
      ]
    }
  ]
}